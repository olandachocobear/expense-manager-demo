{
  "basePath": "/manual-redeem/",
  "entrypoint": "index.html",
  "shell": "src/loyalty-app.html",
  "fragments": [
    "src/entry-page.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json",
    "fonts/**/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "manifest.json"
  ],
  "builds": [
    {
      "name": "es5-bundled",
      "basePath": "ManualRedeem",
      "preset": "es5-bundled"
    },
    {
      "name": "voucher-redeem-web",
      "preset": "es6-bundled",
      "basePath": "voucher-redeem-web/",
      "bundle": {
        "stripComments": true,
        "inlineScripts": false
      },
  "js": {"compile": true, "minify": true},
  "css": {"minify": true},
  "html": {"minify": true},
      "browserCapabilities": [
        "es2015"
      ]
    }
    
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}
